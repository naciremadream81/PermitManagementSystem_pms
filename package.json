{
  "name": "permit-management-system",
  "version": "1.0.0",
  "description": "A comprehensive permit management system for tracking and managing permit packages across all 67 Florida counties",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "api:dev": "npm run start:dev --workspace=packages/api",
    "api:build": "npm run build --workspace=packages/api",
    "install:all": "npm install && npm install --workspace=packages/api",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "@tanstack/react-query": "^4.29.0",
    "@tanstack/react-query-devtools": "^4.29.0",
    "react-hook-form": "^7.43.0",
    "@hookform/resolvers": "^2.9.0",
    "zod": "^3.20.0",
    "axios": "^1.3.0",
    "socket.io-client": "^4.6.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.4.0",
    "react-pdf": "^7.1.0",
    "react-signature-canvas": "^1.0.6",
    "date-fns": "^2.29.0",
    "react-hot-toast": "^2.4.0",
    "lucide-react": "^0.263.0",
    "clsx": "^1.2.0",
    "tailwind-merge": "^1.13.0",
    "react-dropzone": "^14.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-signature-canvas": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.29.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "permit",
    "management",
    "florida",
    "counties",
    "react",
    "typescript",
    "nestjs",
    "postgresql"
  ],
  "author": "Permit Management System Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/permit-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/permit-management-system/issues"
  },
  "homepage": "https://github.com/your-org/permit-management-system#readme"
}
